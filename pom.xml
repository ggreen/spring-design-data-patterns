<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0
                             http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>spring.design.data.patterns</groupId>
    <artifactId>spring-data-pattern</artifactId>
    <packaging>pom</packaging>
    <version>1.0.0</version>
    <name>spring-design-data-patterns</name>
    <modules>
        <module>components/account-domain</module>
        <module>applications/patterns/filtering/sources/account-source</module>
        <module>applications/patterns/filtering/sinks/account-sink</module>
        <module>applications/patterns/filtering/apps/web-app</module>
    </modules>
    <build>
        <pluginManagement>
            <plugins>
                <plugin>
                    <groupId>org.apache.maven.plugins</groupId>
                    <artifactId>maven-compiler-plugin</artifactId>
                    <configuration>
                        <source>17</source>
                        <target>17</target>
                    </configuration>
                </plugin>
            </plugins>
        </pluginManagement>
    </build>
</project>
